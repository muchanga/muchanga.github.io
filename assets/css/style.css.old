/*ESTILOS GERAIS*/
html, body, figure, img, div, input, textarea, p, h1, h2, h3, h4, h5, h6, ul,li, a,main {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    list-style: none;
    text-decoration: none;
    font-family: 'Open Sans', sans-serif;
    font-size: 16px;
}



.linha {
    display: flex;
    flex-wrap: wrap;
    align-items: flex-start;
    justify-content: space-between;
}

.coluna{
    flex-basis: 49%;
}

.hidden {
    display: none;
}

/* BODY */
body {
    font-family: 'Open Sans', sans-serif;
}

/* HEADER */
header {
    background-color: #45dbfc;
    padding: 30px 30px 0;
}
header .container {
    background-color: white;
    width: 100%;
    max-width: 1025px;
    margin: 0 auto;
}
header .linha {
    align-items: center;
}

header .coluna-esquerda {
    flex-basis: 30%;
}
header .coluna-direita {
    flex-basis: 70%;
}

header .coluna img {
    max-width: 100%;
    
}
header .coluna h1{
    font-size: 1.5rem;
}
header .coluna p{
    font-size: 1rem;
    color: #636363;
    margin-top: 0.25rem;
}
header .coluna ul{
    margin: 16px 0 0;
}
header .coluna ul li{
    margin: 0 0 12px;
}
header .coluna ul li a{
    font-size: 1rem;
    color:black;
}


/* FOOTER */
footer {
    background-color: #04133d;
}

footer nav ul li a{
    color: white;
}

footer nav .info-contato li{
    margin: 0 0 15px;
}

footer nav .redes-sociais{
   
    border-top: 1px solid rgb(255 255 255 / 20%);
    margin: 20px 0 50px;
    padding: 50px 0 0;
}
footer nav .redes-sociais li{
    margin: 0 14px;
    text-align: center;
}

footer nav .redes-sociais li a img{
    width: 40px;
}

/* PAGINA INICIAL */
main .coluna section{
    border: 1px solid #d4e9ff;
    margin: 0 0 20px;
    padding: 20px;
    min-height: 187px;
}
main .coluna section h2{
    font-size: 1.3rem;
    margin: 0 0 15px;
}
main .coluna section p{
    font-size: 0.9rem;
    color: #636363;
    line-height: 1.5;
}

main .coluna section ul li strong{
    font-size: 0.9rem;
    font-weight: 500;
    margin: 5px 0 10px;
    display: inline-block;
}

/* EXTRAS */

/* @MEDIAS */
@media only screen and (min-width: 768px){
    .linha {
        display: flex;
        flex-wrap: wrap;
        align-items: flex-start;
        justify-content: space-between;
    }

    footer nav .redes-sociais{
        display: flex;
        justify-content: center;
    }

    header {
        padding: 30px 0 0;
    }

    header .coluna img {
        max-width: 250px;
        border-radius: 100%;
    }

    .container {
        width: 100%;
        max-width: 1025px;
        margin: 0 auto;
        padding: 30px;
    }


}

